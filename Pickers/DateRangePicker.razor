<div class="card shadow-sm">
    <div class="card-body p-2">

        <div class="d-flex justify-content-between align-items-center mb-2">
            <button class="btn btn-sm btn-outline-secondary" @onclick="PrevMonth">
                ‹
            </button>

            <strong>@CurrentMonth.ToString("MMMM yyyy")</strong>

            <button class="btn btn-sm btn-outline-secondary" @onclick="NextMonth">
                ›
            </button>
        </div>

        <!-- Week headers -->
        <div class="row g-1 text-center fw-semibold small">
            @foreach (var d in WeekDays)
            {
                <div class="col">@d</div>
            }
        </div>

        <!-- Days grid -->
        @foreach (var week in Calendar)
        {
            <div class="row g-1 text-center">
                @foreach (var day in week)
                {
                    <div class="col">
                        <button class="@GetDayClass(day)"
                                disabled="@(!day.IsCurrentMonth)"
                                @onclick="() => SelectDate(day.Date)">
                            @day.Date.Day
                        </button>
                    </div>
                }
            </div>
        }
    </div>
</div>
