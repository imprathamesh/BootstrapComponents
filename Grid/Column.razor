<div class="col-xxl-@Size.Name col-xl-@Size.Name col-lg-@Size.Name col-md-12 col-sm-12 col-xs-12 @Class" @attributes="AdditionalAttributes">
    @ChildContent
</div>

@code {
    [Parameter] public ColumnSize Size { get; set; } = ColumnSize.Three;
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string? Class { get; set; }
    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object>? AdditionalAttributes { get; set; }
}
